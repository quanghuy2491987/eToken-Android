<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.NormalCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:divider="@drawable/divider_white"
           android:showDividers="middle">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/normalOTPCode"
                   android:layout_width="@dimen/two_hundred_fifty_dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="123 246"
                   android:textAlignment="center"
                   android:textColor="@color/blur_white"
                   android:textSize="@dimen/thirty_sp"
                   android:textStyle="bold" />

               <ImageView
                   android:id="@+id/normalOTPCopy"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/five_dp"
                   android:adjustViewBounds="true"
                   android:cropToPadding="true"
                   android:scaleType="fitCenter"
                   android:src="?attr/actionModeCopyDrawable"
                   android:tint="@color/white"
                   app:srcCompat="?attr/actionModeCopyDrawable"
                   tools:srcCompat="@mipmap/copy_icon" />
           </LinearLayout>

           <TextView
               android:id="@+id/normalOTPCountdown"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/fifteen_dp"
               android:textAlignment="center"
               android:textColor="@color/white" />
       </LinearLayout>

    </LinearLayout>

</LinearLayout>